<nav class="navbar navbar-expand-lg navbar-light bg-light justify-content-center">
  <div class="container-fluid">
    <a class="navbar-brand" href="/flats">
      <i class="fa-solid fa-user-group"></i> AirFriends
    </a>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ms-auto"> <!-- Added ms-auto to align the ul to the right -->
        <li class="nav-item">
          <%= link_to "Add a Friend", new_flat_path, class: "btn btn-outline-success btn-sm" %>
        </li>
      </ul>
    </div>
  </div>
</nav>

<div class="container text-center mt-5">
  <h1>Why would you edit your Friend ?</h1>
  <h6 class="text-muted mt-5">whatever... go ahead</h6>
  <div class="card mx-auto mt-4 shadow-sm" style="width: 30rem; border: 1px solid #ccc; border-radius: 5px; padding: 20px;">
    <%= simple_form_for @flat do |f| %>
        <%= f.input :name, placeholder: "Name" %>
        <%= f.input :address, placeholder: "Address" %>
        <%= f.input :description, placeholder: "Description" %>
        <%= f.input :price_per_night, placeholder: "Price per Night" %>
        <%= f.input :number_of_guests, placeholder: "Number of Guests" %>
      <%= f.submit "Update Friend", class: "btn btn-danger" %>
    <% end %>
  </div>
</div>
