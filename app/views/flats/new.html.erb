<nav class="navbar navbar-expand-lg navbar-light bg-light justify-content-center">
  <div class="container-fluid">
    <a class="navbar-brand" href="/flats">
      <i class="fa-solid fa-user-group"></i> AirFriends
    </a>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ms-auto"> <!-- Added ms-auto to align the ul to the right -->
        <li class="nav-item">
          <%= link_to "Add a Friend", new_flat_path, class: "btn btn-outline-success btn-sm" %>
        </li>
      </ul>
    </div>
  </div>
</nav>

<div class="card mx-auto mt-5 shadow-sm text-center" style="width: 30rem; border: 1px solid #ccc; border-radius: 5px; padding: 20px;">
  <div class="card-body">
    <h5 class="card-title text-center">Add a Friend</h5>
    <%= simple_form_for @flat do |f| %>
      <div class="mb-3">
        <%= f.input :name, label: false, placeholder: "Name" %>
      </div>
      <div class="mb-3">
        <%= f.input :address, label: false, placeholder: "Address" %>
      </div>
      <div class="mb-3">
        <%= f.input :description, label: false, placeholder: "Description" %>
      </div>
      <div class="mb-3">
        <%= f.input :price_per_night, label: false, placeholder: "Price per Night" %>
      </div>
      <div class="mb-3">
        <%= f.input :number_of_guests, label: false, placeholder: "Number of Guests" %>
      </div>
      <%= f.submit "Add Friend", class: "btn btn-danger" %>
    <% end %>
  </div>
</div>
