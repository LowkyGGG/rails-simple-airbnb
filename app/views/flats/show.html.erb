<h1 class="text-center mt-3"><%= @flat.name %></h1>


<div class="img-container" style="position: relative; width: 100%; max-height: 250px; overflow: hidden; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);">
  <img src="<%= @flat.image_url || 'https://source.unsplash.com/random/800x600/?apartment' %>"
             class="card-img-top"
             alt="<%= @flat.name %>">
  <div style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); color: rgba(255, 255, 255, 0.5); padding: 10px; border-radius: 5px;">
    <h5>Ugly image.png</h5>
  </div>
</div>

<div class="container" style="margin-top: -50px;">
  <div class="row">
    <div class="col-md-6">
      <div class="card mx-auto mt-1 shadow-sm" style="width: 100%; border: 1px solid #ccc; border-radius: 5px; padding: 20px;">
        <h5 class="card-title"><%= @flat.name %></h5>
        <p class="card-text">Address: <%= @flat.address %></p>
      </div>

      <div class="card mx-auto mt-3 shadow-sm" style="width: 100%; border: 1px solid #ccc; border-radius: 5px; padding: 20px;">
        <h5 class="card-title">About this friend...</h5>
        <p class="card-text"><%= @flat.description %></p>
      </div>

      <div class="card mx-auto mt-3 shadow-sm" style="width: 100%; border: 1px solid #ccc; border-radius: 5px; padding: 20px;">
        <h5 class="card-title">Details</h5>
        <p class="card-text"> <i class="fa-solid fa-dollar-sign"></i> Price per night ðŸ‘€ : <%= number_to_currency(@flat.price_per_night) %></p>
        <p class="card-text"> <i class="fa-solid fa-person mr-2"></i> Number of guests: <%= @flat.number_of_guests %></p>
      </div>
    </div>

    <div class="col-md-6">
      <div class="card mx-auto mt-1 shadow-sm" style="width: 100%; border: 1px solid #ccc; border-radius: 5px; padding: 20px;">
        <h5 class="card-title">Book Now</h5>
        <%= simple_form_for :booking do |f| %>
          <div class="mb-3">
            <%= f.input :start_date, label: "Start Date", as: :date %>
          </div>
          <div class="mb-3">
            <%= f.input :end_date, label: "End Date", as: :date %>
          </div>
          <%= f.submit "Book Now", class: "btn btn-danger" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
